<Window x:Class="Warehouse.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse.Views"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="True" ItemsSource="{Binding Products}" />
        <Button Content="Add Product" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="AddProduct_Click" />
        <Button Content="Edit Product" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0" Click="EditProduct_Click" />
        <Button Content="Delete Product" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,10,0,0" Click="DeleteProduct_Click" />
    </Grid>
</Window>
