<UserControl x:Class="Warehouse.Views.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Клиент:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Invoice.CustomerName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="5,0"/>
            <TextBlock Text="Дата:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <DatePicker SelectedDate="{Binding Invoice.OrderDate}" Width="150" Margin="5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Invoice.OrderProducts}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" IsReadOnly="True" SelectedItem="{Binding SelectedOrderProduct, Mode=TwoWay}" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар"      Binding="{Binding Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Цена"       Binding="{Binding Product.Price}" Width="100"/>
                <DataGridTextColumn Header="Сумма"      Binding="{Binding PriceAtOrder}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить позицию"         Command="{Binding AddProductCommand}"  Margin="2"/>
            <Button Content="{Binding SaveButtonText}" Command="{Binding SaveInvoiceCommand}" Margin="2"/>
            <Button Content="Редактировать"            Command="{Binding EditProductCommand}"CommandParameter="{Binding}" Margin="2"/>
            <Button Content="Удалить"                  Command="{Binding DataContext.RemoveProductCommand,RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>
