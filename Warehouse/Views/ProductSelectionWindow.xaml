<Window x:Class="Warehouse.Views.ProductSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse.Views"
        mc:Ignorable="d"
        Title="Выбор товара" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Дважды щелкните по товару для выбора" Margin="0,0,0,10"/>
        <ListBox x:Name="ProductsList" DisplayMemberPath="Name"
                 MouseDoubleClick="ProductsList_MouseDoubleClick" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="5" Click="Ok_Click" IsDefault="True"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </DockPanel>
</Window>
