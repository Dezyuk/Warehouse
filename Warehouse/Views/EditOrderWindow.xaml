<Window x:Class="Warehouse.Views.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя клиента:" Grid.Row="0"/>
        <TextBox x:Name="CustomerNameTextBox" Grid.Row="0" Margin="120,0,0,5"/>

        <TextBlock Text="Дата заказа:" Grid.Row="1"/>
        <DatePicker x:Name="OrderDatePicker" Grid.Row="1" Margin="120,0,0,5"/>

        <TextBlock Text="Товары:" Grid.Row="2"/>
        <ListBox x:Name="ProductsListBox" Grid.Row="2" Margin="120,0,0,5" Height="100" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
