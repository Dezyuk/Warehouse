<Window x:Class="Warehouse.Views.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="500" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Параметры заказа -->
            <RowDefinition Height="*"/>
            <!-- Список позиций -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Клиент:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            <TextBlock Text="Дата заказа:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <DatePicker SelectedDate="{Binding OrderDate}" Width="150"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding OrderProducts}" AutoGenerateColumns="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID товара" Binding="{Binding ProductId}" Width="Auto"/>
                <DataGridTextColumn Header="Название товара" Binding="{Binding Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить позицию" Width="130" Margin="5" Click="AddPosition_Click"/>
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
