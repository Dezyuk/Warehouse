<UserControl x:Class="Warehouse.Views.InboundInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Warehouse.ViewModels"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель кнопок -->
            <RowDefinition Height="*"/>
            <!-- Таблица позиций накладной -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопка сохранения -->
        </Grid.RowDefinitions>

        <!-- Панель кнопок для добавления позиций -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Добавить товар" Command="{Binding AddProductCommand}" Margin="5"/>
        </StackPanel>

        <!-- DataGrid для отображения списка позиций заказа (OrderProducts) -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Invoice.OrderProducts}" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка для сохранения накладной -->
        <Button Grid.Row="2" Content="Сохранить накладную" Command="{Binding SaveInvoiceCommand}" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</UserControl>
