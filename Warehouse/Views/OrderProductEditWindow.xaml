<Window x:Class="Warehouse.Views.OrderProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse.Views"
        mc:Ignorable="d"
        Title="Указать количество" Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выбранный товар:" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" x:Name="ProductNameText" Margin="0,5,0,10" FontSize="16"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="QuantityTextBox" Width="100" Margin="0,0,10,0"/>
            <Button Content="OK" Width="80" Margin="5" Click="Confirm_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
